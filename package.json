    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "prisma": "5.19.1",
    "ts-jest": "29.2.5",
    "typescript": "^5.5.4",
